<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElegirDificultad">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fondoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondomenuprincipal"
        tools:context=".Ajustes"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="-252dp">

        <ImageView
            android:id="@+id/appLogoMP3"
            android:layout_width="120dp"
            android:layout_height="115dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/applogo" />

        <ImageButton
            android:id="@+id/facil"
            android:layout_width="175dp"
            android:layout_height="67dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.412"
            app:srcCompat="@drawable/botonbronce" />

        <ImageButton
            android:id="@+id/dificil"
            android:layout_width="175dp"
            android:layout_height="67dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.637"
            app:srcCompat="@drawable/botonmaster" />

        <ImageButton
            android:id="@+id/URF"
            android:layout_width="175dp"
            android:layout_height="67dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.748"
            app:srcCompat="@drawable/botonaram" />

        <ImageButton
            android:id="@+id/normal"
            android:layout_width="175dp"
            android:layout_height="67dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.524"
            app:srcCompat="@drawable/botonplatino" />

        <TextView
            android:id="@+id/elegirDifTexto"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:fontFamily="sans-serif"
            android:text="Escoger dificultad"
            android:textAlignment="center"
            android:textColor="#FADB6A"
            android:textColorHighlight="#000000"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/facil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appLogoMP3"
            app:layout_constraintVertical_bias="0.461" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/appLogoMP5"
        android:layout_width="120dp"
        android:layout_height="115dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/applogo" />

    <Button
        android:id="@+id/salir6"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/salir_boton"
        android:fontFamily="sans-serif"
        android:onClick="SalirMenuPrincipalAlerta"
        android:text="X"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marcoPregunta"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>